# Production PWA Nutrition Platform Environment Configuration
# Copy this file to .env and configure your values

# Server Configuration
PORT=8080
HOST=0.0.0.0
GIN_MODE=release
ENVIRONMENT=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutrition_platform
DB_USER=nutrition_user
DB_PASSWORD=your_secure_password
DB_SSL_MODE=require
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Security Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters
API_KEY_ENCRYPTION_KEY=your_api_key_encryption_secret_32_chars
BCRYPT_COST=12
SESSION_TIMEOUT=24h
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1h

# Compression and Optimization
GZIP_COMPRESSION_LEVEL=6
BROTLI_COMPRESSION_LEVEL=6
STATIC_FILE_CACHE_TTL=31536000
API_CACHE_TTL=300
IMAGE_COMPRESSION_QUALITY=85
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true

# PWA Configuration
PWA_NAME="NutriTracker Pro"
PWA_SHORT_NAME="NutriTracker"
PWA_DESCRIPTION="Professional Nutrition and Training Platform"
PWA_THEME_COLOR="#2196F3"
PWA_BACKGROUND_COLOR="#FFFFFF"
PWA_START_URL="/"
PWA_SCOPE="/"
PWA_DISPLAY="standalone"
PWA_ORIENTATION="portrait"

# API Configuration
API_VERSION=v1
API_TIMEOUT=30s
MAX_REQUEST_SIZE=10MB
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100

# Religious/Ethical Filters
HALAL_MODE=true
AVOID_ALCOHOL=true
AVOID_PORK=true
DIETARY_RESTRICTIONS=halal,no_alcohol,no_pork

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=3

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
IMAGE_RESIZE_QUALITY=85

# Monitoring and Logging
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'"

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=86400

# Nginx Integration
NGINX_STATIC_CACHE=true
NGINX_GZIP_STATIC=true
NGINX_BROTLI_STATIC=true
